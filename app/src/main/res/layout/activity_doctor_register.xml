<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorRegisterActivity"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/mDocEdtName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="248dp"
        android:hint="@string/Name"
        style="@style/inputfield"/>

    <EditText
        android:id="@+id/mDocEdtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="312dp"
        android:hint="@string/Email"
        style="@style/inputfield"/>
    <EditText
        android:id="@+id/mDocEdtPhoneNumber"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/phonenumber"
        style="@style/inputfield"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="312dp"/>

    <EditText
        android:id="@+id/mDocEdtDepartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/password"
        style="@style/inputfield"/>
    <EditText
        android:id="@+id/mDocEdtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/password"
        style="@style/inputfield" />
    <EditText
        android:id="@+id/mDocEdtConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/confirmpassword"
        style="@style/inputfield"/>

    <Button
        android:id="@+id/mDocBtnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registerHere"
        style="@style/buttons"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account   "
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/mTvDocLoginPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Login"
            android:textSize="13dp"/>

    </LinearLayout>

</LinearLayout>